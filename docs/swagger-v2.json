                    "Auth"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "sarah@test.com"
                                    },
                                    "nom": {
                                        "type": "string",
                                        "example": "Sarah"
                                    },
                                    "username": {
                                        "type": "string",
                                        "example": "sarah123"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "123456"
                                    }
                                },
                                "required": [
                                    "email",
                                    "nom",
                                    "username",
                                    "password"
                                ]
