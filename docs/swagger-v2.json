                                    "properties": {
                                        "_id": {
                                            "type": "string",
                                            "example": "64f5a83ac0e0e89f91cdaa11"
                                        },
                                        "email": {
                                            "type": "string",
                                            "example": "sarah@test.com"
                                        },
                                        "nom": {
                                            "type": "string",
                                            "example": "Sarah"
                                        },
                                        "username": {
                                            "type": "string",
                                            "example": "sarah123"
                                        },
                                        "role": {
                                            "type": "string",
                                            "enum": [
                                                "user",
                                                "admin"
